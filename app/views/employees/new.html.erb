<h1>New Employee</h1>
<%= form_with(model: @employee, local: true, html: { class: "employee-form" }) do |form| %>
  <% if @employee.errors.any? %>
    <div id="error_explanation" class="error-messages">
      <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h2>
      <ul>
        <% @employee.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :designation %>
    <%= form.text_field :designation, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :department %>
    <%= form.collection_select :department_id, Department.all, :id, :name, { prompt: "Select Department" }, { class: "form-control" } %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to 'Back', employees_path, class: 'btn btn-secondary' %>
  </div>
<% end %>

<style>
  .employee-form {
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
    border: 1px solid #ddd;
    border-radius: 10px;
    background-color: #f9f9f9;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }

  .employee-form .field {
    margin-bottom: 15px;
  }

  .employee-form .form-control {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
  }

  .employee-form .btn {
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
  }

  .employee-form .btn-primary {
    background-color: #007bff;
    color: #fff;
  }

  .employee-form .btn-primary:hover {
    background-color: #0056b3;
  }

  .employee-form .btn-secondary {
    background-color: #6c757d;
    color: #fff;
    text-decoration: none;
  }

  .employee-form .btn-secondary:hover {
    background-color: #5a6268;
  }

  .error-messages {
    background-color: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
    padding: 10px;
    border-radius: 5px;
    margin-bottom: 20px;
  }

  .error-messages h2 {
    margin-top: 0;
  }
</style>
